<?xml version="1.0" encoding="utf-8"?><!--<Button-->

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/closeAdd"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/close" />

    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="30dp"
        android:paddingRight="10dp"
        android:background="@drawable/rounded6"
        android:hint="Title"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/detailsEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded6"
        android:paddingRight="10dp"
        android:hint="Details"
        android:minHeight="30dp"
        android:paddingLeft="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded6"
        android:orientation="horizontal"
        android:padding="10dp">

        <RadioGroup
            android:id="@+id/colorsGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@id/color1Button"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/color1Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/color1" />

            <RadioButton
                android:id="@+id/color2Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/color2" />

            <RadioButton
                android:id="@+id/color3Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/color3" />

            <RadioButton
                android:id="@+id/color4Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/color4" />

            <RadioButton
                android:id="@+id/color5Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/color5" />
        </RadioGroup>
    </LinearLayout>
    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded6"
        android:layout_marginBottom="30dp"
        android:text="ADD" />
</LinearLayout>
</ScrollView>